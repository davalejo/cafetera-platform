<web-app xmlns="http://jakarta.ee/xml/ns/jakartaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jakarta.ee/xml/ns/jakartaee
        http://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
        version="5.0">

    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>com.cafetera.servlets.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PedidosServlet</servlet-name>
        <servlet-class>com.cafetera.servlets.PedidosServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PedidosServlet</servlet-name>
        <url-pattern>/pedidos</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductoresServlet</servlet-name>
        <servlet-class>com.cafetera.servlets.ProductoresServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductoresServlet</servlet-name>
        <url-pattern>/productores</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PagosServlet</servlet-name>
        <servlet-class>com.cafetera.servlets.PagosServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PagosServlet</servlet-name>
        <url-pattern>/pagos</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InventarioServlet</servlet-name>
        <servlet-class>com.cafetera.servlets.InventarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InventarioServlet</servlet-name>
        <url-pattern>/inventario</url-pattern>
    </servlet-mapping>
</web-app>